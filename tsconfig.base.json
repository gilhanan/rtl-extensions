{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rtl-extensions/chrome": ["libs/chrome/src/index.ts"],
      "@rtl-extensions/content": ["libs/content/src/index.ts"],
      "@rtl-extensions/dom": ["libs/dom/src/index.ts"],
      "@rtl-extensions/popup": ["libs/popup/src/index.ts"],
      "@rtl-extensions/rtl": ["libs/rtl/src/index.ts"],
      "@rtl-extensions/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
